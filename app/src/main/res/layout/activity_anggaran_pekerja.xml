<?xml version="1.0" encoding="utf-8"?>
<RelativeLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:tools="http://schemas.android.com/tools"
    android:id="@+id/activity_anggaran_pekerja"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:paddingBottom="@dimen/activity_vertical_margin"
    android:paddingLeft="@dimen/activity_horizontal_margin"
    android:paddingRight="@dimen/activity_horizontal_margin"
    android:paddingTop="@dimen/activity_vertical_margin"
    android:background="@drawable/backgronddasar"
    tools:context="com.example.iqbalgozali.tokbangunan.AnggaranPekerja">
    <TextView
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:text="ANGGARAN PEKERJAAN"
        android:gravity="center"
        android:textSize="25dp"
        android:textColor="#000000"
        android:id="@+id/textView3" />

    <TextView
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:text="m3"
        android:textSize="30dp"
        android:textColor="#000000"
        android:layout_alignTop="@+id/VB"
        android:layout_toEndOf="@+id/VB"
        android:layout_marginStart="21dp"
        android:id="@+id/textView10" />

    <EditText
        android:layout_width="250dp"
        android:layout_height="wrap_content"
        android:hint="Volume Bangunan"
        android:textColor="#000000"
        android:layout_marginTop="51dp"
        android:id="@+id/VB"
        android:layout_below="@+id/textView3"
        android:layout_alignParentStart="true" />



    <EditText
        android:layout_width="250dp"
        android:layout_height="wrap_content"
        android:hint="Biaya Pekerjaan"
        android:textColor="#000000"
        android:layout_marginTop="21dp"
        android:id="@+id/BP"
        android:layout_below="@+id/VB"
        android:layout_alignParentStart="true" />

    <TextView
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:textSize="20dp"
        android:textColor="#000000"
        android:layout_below="@+id/BP"
        android:layout_alignParentStart="true"
        android:layout_marginTop="76dp"
        android:id="@+id/HS" />

    <TextView
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:text="/1x"
        android:textSize="30dp"
        android:textColor="#000000"
        android:id="@+id/textView9"
        android:layout_alignTop="@+id/BP"
        android:layout_alignEnd="@+id/textView10" />

    <Button
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:text="Hasil"
        android:layout_marginStart="43dp"
        android:layout_marginTop="39dp"
        android:id="@+id/BtHs"
        android:layout_below="@+id/HS"
        android:layout_toEndOf="@+id/HS" />

    <TextView
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:text="*Biaya Pekerjaan tergantung biaya yang di keluarkan dari pekerja dengan dihitung 1x pekerjaan"
        android:id="@+id/textView16"
        android:layout_alignBaseline="@+id/HS"
        android:layout_alignBottom="@+id/HS"
        android:layout_alignParentStart="true" />
</RelativeLayout>
