<?xml version="1.0" encoding="utf-8"?>
<RelativeLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:tools="http://schemas.android.com/tools"
    android:id="@+id/activity_contex"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:paddingBottom="@dimen/activity_vertical_margin"
    android:paddingLeft="@dimen/activity_horizontal_margin"
    android:paddingRight="@dimen/activity_horizontal_margin"
    android:paddingTop="@dimen/activity_vertical_margin"
    android:background="@drawable/co"
    tools:context="com.example.iqbalgozali.tokbangunan.contex">

    <Button
        android:layout_width="100dp"
        android:layout_height="85dp"
        android:background="@drawable/at"
        android:id="@+id/AT"
        android:layout_alignTop="@+id/AB"
        android:layout_alignParentEnd="true" />
    <ImageView
        android:layout_width="match_parent"
        android:layout_height="175dp"
        android:id="@+id/image"/>

    <TextView
        android:text="Anggaran Bangunan"
        android:gravity="center"
        android:textColor="#ff00"
        android:textStyle="bold"
        android:layout_width="85dp"
        android:layout_height="wrap_content"
        android:id="@+id/textView12"
        android:layout_alignBaseline="@+id/textView11"
        android:layout_alignBottom="@+id/textView11"
        android:layout_centerHorizontal="true" />

    <TextView
        android:text="Anggaran Pekerjaan "
        android:gravity="center"
        android:textColor="#ff00"
        android:textStyle="bold"
        android:layout_width="85dp"
        android:layout_height="wrap_content"
        android:id="@+id/textView13"
        android:layout_alignBaseline="@+id/textView12"
        android:layout_alignBottom="@+id/textView12"
        android:layout_alignParentEnd="true"
        android:layout_marginEnd="12dp" />

    <Button
        android:layout_width="100dp"
        android:layout_height="85dp"
        android:background="@drawable/menuutama"
        android:id="@+id/pilih"
        android:layout_centerVertical="true"
        android:layout_alignParentStart="true" />

    <Button
        android:layout_width="100dp"
        android:layout_height="85dp"
        android:background="@drawable/ab"
        android:id="@+id/AB"
        android:layout_alignTop="@+id/pilih"
        android:layout_alignStart="@+id/textView12" />

    <TextView
        android:text="Bahan Material"
        android:textColor="#ff00"
        android:textStyle="bold"
        android:gravity="center"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_marginTop="12dp"
        android:id="@+id/textView11"
        android:layout_below="@+id/pilih"
        android:layout_alignEnd="@+id/pilih" />

    <Button
        android:layout_width="100dp"
        android:layout_height="85dp"
        android:background="@drawable/abo"
        android:id="@+id/about"
        android:layout_marginTop="18dp"
        android:layout_below="@+id/textView12"
        android:layout_alignEnd="@+id/textView12"
        android:layout_marginEnd="50dp" />

    <TextView
        android:text="Help "
        android:gravity="center"
        android:textColor="#FFFF0000"
        android:textStyle="bold"
        android:layout_width="65dp"
        android:layout_height="wrap_content"
        android:id="@+id/textView15"
        android:layout_below="@+id/about"
        android:layout_toEndOf="@+id/AB"
        android:layout_marginTop="16dp" />

    <TextView
        android:text="About "
        android:gravity="center"
        android:textColor="#ff00"
        android:textStyle="bold"
        android:layout_width="65dp"
        android:layout_height="wrap_content"
        android:id="@+id/textView14"
        android:layout_marginEnd="15dp"
        android:layout_alignBaseline="@+id/textView15"
        android:layout_alignBottom="@+id/textView15"
        android:layout_alignEnd="@+id/about" />

    <Button
        android:layout_width="100dp"
        android:layout_height="85dp"
       android:background="@drawable/help"
        android:id="@+id/app"
        android:layout_above="@+id/textView15"
        android:layout_alignEnd="@+id/textView15" />

</RelativeLayout>
